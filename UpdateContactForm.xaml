<Window x:Class="Contacts.UpdateContactForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Contacts"
        mc:Ignorable="d"
        Title="Update a Contact" Height="300" Width="300" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="10">
        <Label>First Name</Label>
        <TextBox x:Name="UpdateFirstNameTextBox" BorderBrush="{x:Null}" Background="#FFE6E6E6"></TextBox>
        <Label>Last Name</Label>
        <TextBox x:Name="UpdateLastNameTextBox" BorderBrush="{x:Null}" Background="#FFE6E6E6"></TextBox>
        <Label>Phone Number</Label>
        <TextBox x:Name="UpdatePhoneNumberTextBox" BorderBrush="{x:Null}" Background="#FFE6E6E6"></TextBox>
        <Button Content="Submit And Close" Margin="5,10" Click="updateContact" />
        <Button Content="Clear" Margin="5,5" Click="UpdateClearFields" Background="#FF4AAAF3" BorderBrush="{x:Null}" />
        <Button Content="Close" Margin="5,5" Click="UpdateFormClose" BorderBrush="{x:Null}" Background="#FFF71414" Foreground="White" />
        
    </StackPanel>
</Window>
